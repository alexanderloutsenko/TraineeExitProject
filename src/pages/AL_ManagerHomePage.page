<apex:page showHeader="false" sidebar="false" controller="AL_UserHomePageController">
    <apex:define name="body">  
      <center>
        <apex:panelGrid bgcolor="white" columns="1" style="align: center;"> 
          <br/>
          <br/>
          <apex:panelGrid width="500" cellpadding="0" cellspacing="0" bgcolor="lightblue" columns="1" style="topPanel"> 
            <br/>
            <apex:outputPanel layout="block" styleClass="topPanelContainer">
              <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="2"> 
                <apex:panelGroup >
                  <apex:outputText styleClass="title" value="Communal Services Manager's App" style="text-shadow: 2px 2px 5px rgb(195, 0, 255);font-family:'Trebuchet MS', Verdana, sans-serif;font-size: 15px;color:blueviolet;"/>
                  <br/>
                  <br/>
                  <br/>
                  <apex:outputText value="Hi {!pageUser.Name}!" style="font-size: 120%" /><br/><br/>
                  <apex:outputText value="You've just loged in like a manager and the region under your supervision is {!pageUser.Region__r.Name}." style="font-size: 120%" /><br/><br/>
                  <apex:outputText value="From this page you can view your region's payment history and update your region's rates." style="font-size: 120%"/>
                  <br/>
                  <br/>
                  <br/>
                  <br/>
                  <apex:outputLink value="{!$Page.AL_ManagerPaymentHistory+'?id='+$CurrentPage.parameters.id}" > View payments history for your region </apex:outputLink>
                  <br/>
                  <br/>
                  <apex:outputLink value="{!$Page.AL_UpdateRates+'?id='+$CurrentPage.parameters.id}" > Update rates for your region </apex:outputLink>
                  <br/>
                </apex:panelGroup>
              </apex:panelGrid> 
            </apex:outputPanel>
          </apex:panelGrid> 
       </apex:panelGrid>
      </center>
      <br/>
    </apex:define>
</apex:page>